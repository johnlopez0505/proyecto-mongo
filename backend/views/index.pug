extends layout

block content

    div(style="width:50%; margin:auto;" )
        h1.mb-5(style="width:50%; margin:auto; text-align:center" ) Bienvenido #{currentUser ? currentUser.username : 'Invitado'} 
        
        if !currentUser
            p(class="d-grid gap-2 col-2 mx-auto")   
                a(href="/auth/login" class="btn btn-outline-success") Sing in 
                
        else 
            p(class="d-grid gap-2 col-2 mx-auto") 
                a(href='/auth/logout' class="btn btn-outline-success") logout